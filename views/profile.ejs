<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_head') %>
  </head>

  <body>
    <div class="container">
      <div class="c1"><header><%- include('partials/_header') %></header></div>

      <section class="profile-page">
        <div class="profile-profile">
          <img
            src="https://e7.pngegg.com/pngimages/918/46/png-clipart-pegman-google-maps-google-street-view-google-goggles-google-angle-rectangle.png"
            height="100px"
            width="100px"
          />
          <h2><%= user.name %></h2>
          <div class="map-selection">
            <form action="/profile" action="GET">
              <button type="submit" class="profile-button">All Maps</button>
            </form>
            <form action="/profile-favorite-maps" action="GET">
              <button type="submit" class="profile-button">Favorites</button>
            </form>
            <form action="/profile-contributor-maps" action="GET">
              <button type="submit" class="profile-button">Contributed</button>
            </form>
          </div>
          <div class="profile-map-list">
            <% for (const map of maps) { %>
            <form>
              <label class="profile-map-list-button"
                ><%=map.name%>
                <input hidden value="<%=map.id%>" type="submit" />
              </label>
            </form>
            <% } %>
          </div>
        </div>
        <div class="profile-map-box">
          <div class="profile-map" id="map"></div>
        </div>
      </section>
      <div class="c3">class: c3</div>
      <div class="c4">class: c4</div>
      <div class="c5"><footer><%- include('partials/_footer') %></footer></div>
    </div>
    <script type="text/javascript" src="/scripts/map.script.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_head') %>
  </head>

  <body>
    <div class="container">
      <div class="c1"><header><%- include('partials/_header') %></header></div>

      <div class="c2">
        <h2>View Maps</h2>
        <div class="map-container">
          <div class="map-list">
            <h3>MAPS</h3>
            <div>
              <% for (const map of maps) { %>
              <form class="map-item-box">
                <label class="map-item"
                  ><%=map.name%>
                  <input
                    hidden
                    value="<%=map.id%>"
                    type="submit"
                  />
                </label>
              </form>
              <% } %>
            </div>
          </div>

          <div class="map" id="map"></div>
        </div>
      </div>

      <div class="c3">class: c3</div>
      <div class="c4">class: c4</div>
      <div class="c5"><footer><%- include('partials/_footer') %></footer></div>
    </div>
    <script
      type="text/javascript"
      src="/scripts/leaflet-map.script.js"
    ></script>
    <script type="text/javascript" src="/scripts/point.script.js"></script>
  </body>
</html>

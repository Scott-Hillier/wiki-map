<header>
  <nav class="navbar">
    <a class="logo" href="/">
      <img src="/images/logo.png" alt="Wiki Maps" width="40px" height="40px" />
      <h1><i class="fab fa-wikipedia-w"></i>IKI MAPS</h1>
    </a>

    <div class="nav">
      <% if(user) { %>
      <a href="/profile">Profile</a>
      <a id="nav-create-map">Create Map</a>
      <% } else {%>
      <div style="opacity: 0; width: 10px"></div>
      <% } %> <% if(!user) { %>
      <form class="sign-in-form">
        <input type="text" name="user-id" placeholder="User ID" />
        <button type="submit">Sign in</button>
      </form>
      <% } else { %>
      <div class="sign-out-box">
        <p class="signed-in-message">Hi! <%= user.name %></p>
        <form class="sign-out-form">
          <input hidden name="user-id" value="<%=user.id%>"" />
          <p class="sign-out-button">Sign out</p>
        </form>
      </div>
      <% } %>
    </div>
  </nav>
</header>
